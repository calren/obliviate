<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/question_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Enter Question here" />

    <EditText
        android:id="@+id/answer_entry_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_entry"
        android:layout_margin="20dp"
        android:hint="Enter Incorrect Answer 1" />

    <EditText
        android:id="@+id/answer_entry_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_entry_1"
        android:layout_margin="20dp"
        android:hint="Enter Incorrect Answer 2" />

    <EditText
        android:id="@+id/answer_entry_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_entry_2"
        android:layout_margin="20dp"
        android:hint="Enter Correct Answer" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/save_icon"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>